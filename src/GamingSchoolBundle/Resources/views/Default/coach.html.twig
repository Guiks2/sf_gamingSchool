{% extends "GamingSchoolBundle:Default:base.html.twig" %}

{% block title %}Profil de XXX{% endblock %}

{% block content %}
<div id="fullWidthProfileZone">
	<div id="profileProfilePic">
		<img src="{{ asset('/bundles/gamingschool/img/default-avatar.jpg') }}"/>
	</div>
	<h3>{{ coach.username }}</h3>
</div>

<div class="container" id="coachInfosContainer">
	<div class="row">
		<div class="col s12 m8">
			<div class="card darken-1">
				<div class="card-content">
					<span class="card-title">Informations</span>
					<p><b>Nom utilisateur: </b>{{coach.username }}<br>
					<b>Prénom: </b>{{ coach.userFirstName }}<br>
					<b>Adresse: </b>{{ coach.userAddress }}<br>
					<b>Email: </b>{{ coach.email }}</p>
				</div>
			</div>
		</div>

		<div class="col s12 m4">
	    <form action='#' method="post">
			<div class="card darken-1">
				<div class="card-content">
					<span class="card-title">Packs du coach</span>
						{{ form_widget(form.selectPack) }}
						{{ form_widget(form.save) }}
		    {{ form_rest(form) }}
					</form>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col s12">
			<div class="card darken-1">
				<div class="card-content">
					<span class="card-title">Planning</span>
					<p>Planning du coach présentant ses disponibilités au niveau de ses horaires</p>
				</div>
			</div>
		</div>
</div>


{% endblock %}